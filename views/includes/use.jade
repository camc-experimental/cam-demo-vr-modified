div._demo--container
  include ../mixins/sampleInput.jade

  h2.base--h2.use--header Try the service
  div View what others upload, then upload your own image.
  +sampleInput('use')

  .loading.use--loading.display-none
    .loader-container
      svg.loader(viewBox='25 25 50 50')
        circle.loader__path(cx='50', cy='50', r='20')
    p.base--p.use--loading-message.loading--message Watson is classifying the image to determine a match...
  .error.use--error.display-none
    img.use--error-image.error--image(src='images/icons/alert.svg')
    p.base--p.use--error-message.error--message Visual Recognition is not available right now...
  .use--output.display-none
    if playaudio == true
      h2.base--h2.use--output-header Watson says...
      <div><center><audio controls><source src="/audiofile/#{sessionid}" type="audio/wav">Your browser does not support the audio element.</audio></center></div>
      //<div><button onclick="getAudio()">Update Audio</button></div>
    h2.base--h2.use--output-header Watson sees...
    .use--output-row
      .use--output-image-container
        img.use--output-image
      #box.boxes
      .use--output-data
